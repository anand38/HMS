<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>AccountController</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.controller.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountController</servlet-name>
        <servlet-class>com.controller.AccountController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CandidateRegistrationController</servlet-name>
        <servlet-class>com.controller.CandidateRegistrationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JsonProvider</servlet-name>
        <servlet-class>com.controller.JsonProvider</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JobApplicationController</servlet-name>
        <servlet-class>com.controller.JobApplicationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Updater</servlet-name>
        <servlet-class>com.controller.Updater</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/Controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountController</servlet-name>
        <url-pattern>/AccountController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CandidateRegistrationController</servlet-name>
        <url-pattern>/CandidateRegistrationController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JsonProvider</servlet-name>
        <url-pattern>/JsonProvider</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JobApplicationController</servlet-name>
        <url-pattern>/JobApplicationController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Updater</servlet-name>
        <url-pattern>/Updater</url-pattern>
    </servlet-mapping>
</web-app>